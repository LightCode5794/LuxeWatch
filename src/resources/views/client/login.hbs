<form method="GET" name="frmLogin" id="frmLogin" action="/auth/google">

    <div class="form-floating mb-3">
        <input type="text" name="email" class="form-control" id="username" placeholder="name@example.com">
        <label for="username">Username or Email address <span class="required">*</span></label>
    </div>
    <div class="form-floating mb-3">
        <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password <span class="required">*</span></label>
    </div>
    <div class="question-group mb-3">
        <label class="rememberme">
            <input type="checkbox" name="checkboxRemember" id="rememberme" value="forever" width="100%" height="100%">
            <span>Remember me</span>
        </label>
        <span>
            <a href="#" class="link-content hover-underline-animation">Lost your password?</a>
        </span>
    </div>
    <button class=" btn btn-primary btn-dark mb-3 " type="button">Login</button>
    <p class="register">
        Not a member?
        <a href="#" class="link-content hover-underline-animation ">Register</a>
    </p>
