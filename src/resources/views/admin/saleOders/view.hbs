<div class="d-flex justify-content-center align-items-center m-3">

    <div class="card w-75 ">
        <h2 class="card-header bg-warning text-center font-weight-bold">
            Oder Detail</h2>
        <div class="card-body">

            <div class="d-flex align-items-center">
                <p class="fw-bold me-1">Status: </p>
                <p> {{statusOder}}</p>
            </div>

        </div>
        {{#with oder}}
        <h3 class="h5 m-4 text-center">Purchase Information</h3>

        <table class="table table-sm p-5 text-center">
            <thead>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </thead>
            <tbody>
                {{#each productList}}
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img class="product-img" src="{{this.product.thumbnail.path}}" alt="" style="width: 50px">
                            <p class="m-0">{{this.product.name}}</p>
                        </div>

                    </td>
                    <td class="align-middle">{{number this.product.price "0,0.00"}} VNĐ</td>
                    <td class="align-middle">{{this.count}}</td>

                    <td class="align-middle">{{number (multiply this.product.price this.count)
                        "0,0.00" }} VNĐ</td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr>

                    <td colspan="4" class="text-end text-danger font-weight-bold">Total:
                        {{ number totalPrice "0,0.00"}} VNĐ </td>
                </tr>
            </tfoot>
        </table>

        <div class="p-4">
            <h5>Customer Information</h5>

            <div class="d-flex align-items-center">
                <p class="fw-bold me-1">Email: </p>
                <p> {{user.email}}</p>
            </div>

            <div class="d-flex align-items-center">
                <p class="fw-bold me-1">Name: </p>
                <p> {{firstName}} {{lastName}}</p>
            </div>
            <div class="d-flex align-items-center">
                <p class="fw-bold me-1">Phone: </p>
                <p>{{phoneNumber}}</p>
            </div>

        </div>
        <div class="p-4">
            <h5>Delivery Information</h5>

            <div class="d-flex align-items-center">
                <p> {{address}}</p>
            </div>
        </div>
        {{/with}}
    </div>
</div>
</div>