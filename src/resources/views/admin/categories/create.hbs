<div class="row page-title">
    <div class="py-4">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h3 m-0">Add Categories</h1>
            </div>
        </div>
    </div>
</div>

<div class="card p-2">
    <form method="POST" action="/admin/categories/store">
        <div class="form-group pb-3">
            <label class="form-label">Category Name:</label>
            <input name="name" type="text" class="form-control " required>
        </div>
        <div class="form-group pb-3">
            <label class="form-label">Category Description:</label>
            <textarea name="description" class="form-control required" rows="4" required></textarea>
        </div>
        <div class="form-group p-2 float-end me-2">
            <button type="reset" class="btn btn-danger me-3">Reset</button>
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </form>
</div>