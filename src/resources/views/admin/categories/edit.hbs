<div class="row page-title">
    <div class="py-4">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h3 m-0">Edit Category</h1>
            </div>
        </div>
    </div>
</div>

<div class="card p-2">
    {{#with category}}
    <form method="POST" action="/admin/categories/{{_id}}?_method=PUT">

        <div class="form-group pb-3">
            <label class="form-label">Category Name:</label>
            <input name="name" class="form-control " type="text" value="{{name}}" required>
        </div>
        <div class="form-group pb-3">
            <label class="form-label">Category Description:</label>
            <textarea name="description" class="form-control" rows="4" required>{{description}}</textarea>
        </div>
        <div class="form-group p-2 float-end me-2">
            <button type="reset" class="btn btn-danger me-3">Reset</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
    {{/with}}

</div>