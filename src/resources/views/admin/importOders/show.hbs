<div class="row page-title">
    <div class="py-4">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h3 m-0">Import Oders</h1>
            </div>
        </div>
    </div>
</div>

<div class="card p-2">
    <div class="widget-table  table-responsive">

        <table id="ImportOders-table" class="table order-list-tb table-bordered">
            <thead class="text-primary">
                <tr>
                    <th> No</th>
                    {{!-- <th> Oder Id</th> --}}
                    <th> Order Creation Date </th>
                    <th>Product</th>
                    <th> Quantity</th>
                    <th> Unit Price</th>
                    <th> Value</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <!-- oder 1 -->
                {{#each importOders}}
                <tr>
                    <td>{{sum @index 1}}</td>
                    {{!-- <th>00000</th> --}}
                    <td>{{moment this.createdAt format="DD/MM/YYYY"}}</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <img class="product-img" src="{{this.product.thumbnail.path}}" alt="" style="width: 36px">
                            <p class="m-0">{{this.product.name}}</p>
                        </div>
                    </td>
                    <td>{{this.quantity}}</td>
                    <td>{{number this.unitPrice "0,0.00" }} VNĐ</td>
                    <td>{{number (multiply this.quantity this.unitPrice) "0,0.00" }} VNĐ</td>

                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn btn-sm btn-muted d-block" id="widget-context-menu-1"
                                data-bs-toggle="dropdown" aria-expanded="false" aria-label="More"><svg
                                    xmlns="http://www.w3.org/2000/svg" width="3" height="13" fill="currentColor">
                                    <path
                                        d="M1.5,8C0.7,8,0,7.3,0,6.5S0.7,5,1.5,5S3,5.7,3,6.5S2.3,8,1.5,8z M1.5,3C0.7,3,0,2.3,0,1.5S0.7,0,1.5,0 S3,0.7,3,1.5S2.3,3,1.5,3z M1.5,10C2.3,10,3,10.7,3,11.5S2.3,13,1.5,13S0,12.3,0,11.5S0.7,10,1.5,10z">
                                    </path>
                                </svg>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="widget-context-menu-1">
                                <li><a class="dropdown-item" href="/admin/ImportOders/{{this._id}}/edit">Edit</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item text-danger" href="#">Delete</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        $(document).ready(function () {
            $('#ImportOders-table').DataTable({
                pageLength: 7,
                lengthMenu: [8, 15, 20, 50, 100],
                columnDefs: [{
                    "targets": [5],
                    "searchable": false,
                    "orderable": false,
                    "visible": true
                }]
            });
        });
    })

</script>